<form action="/category/<%=@article.category.id%>/<%= @article.id%>" method="post" id="edit">
    <input type="hidden" name="_method" value="put">

    <label for="name">Category</label>
    <select name="categories">
      <% Category.all.each do |category|%>
      <option value="<%=category.id%>"><%= category.name %></option>
      <%end%>
    </select><br>

    <label for="title">Title</label>
    <input type="string" name="title" value="<%=@article.title%>" />
    <br>

    <label for="price">Price</label>
    <input type="integer" name="price" value="<%=@article.price%>" />
    <br>

    <label for="description">Description</label>
    <input type="string" name="description" value="<%=@article.description%>" />
    <br>

    <input type="submit" value="Update Article">
</form>
